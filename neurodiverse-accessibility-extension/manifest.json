{
  "manifest_version": 3,
  "name": "Neurodiverse Accessibility",
  "version": "1.0",
  "description": "A Chrome extension to support neurodiverse individuals",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "assets/icons/icon16.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles/modes.css", "styles/alerts.css"]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "web_accessible_resources": [{
    "resources": [
      "assets/fonts/OpenDyslexic-Regular.woff",
      "styles/*"
    ],
    "matches": ["<all_urls>"]
  }],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Open accessibility controls"
    }
  }
}